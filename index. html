<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Study Hub</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-900 flex flex-col items-center min-h-screen p-5">

  <!-- Header -->
  <h1 class="text-4xl font-bold mt-10">Welcome to My Study Hub</h1>
  <p class="mt-3 text-center text-gray-700">Your study resources all in one place!</p>

  <!-- Flashcards Section -->
  <div id="flashcards" class="mt-10 w-full max-w-md bg-white p-5 rounded shadow">
    <h2 class="text-2xl font-semibold mb-3">Flashcards</h2>
    <p id="flashcard-content" class="text-gray-800 mb-3">Click "Next" to see a flashcard.</p>
    <button id="nextFlashcard" class="px-4 py-2 bg-green-500 text-white rounded hover:bg-green-600">Next</button>
  </div>

  <!-- Quiz Section -->
  <div id="quiz" class="mt-10 w-full max-w-md bg-white p-5 rounded shadow">
    <h2 class="text-2xl font-semibold mb-3">Quiz</h2>
    <p id="quiz-question" class="mb-3">Click "Next Question" to start the quiz.</p>
    <button id="nextQuiz" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">Next Question</button>
    <p class="mt-2 text-gray-700">Score: <span id="quiz-score">0</span></p>
  </div>

  <!-- Progress Tracker / Streak -->
  <div id="progress" class="mt-10 w-full max-w-md bg-white p-5 rounded shadow">
    <h2 class="text-2xl font-semibold mb-3">Your Progress</h2>
    <p>Streak: <span id="streak">0</span> days</p>
  </div>

  <!-- PDF Notes -->
  <div class="mt-10 w-full max-w-md bg-white p-5 rounded shadow">
    <h2 class="text-2xl font-semibold mb-3">PDF Notes</h2>
    <a href="example.pdf" target="_blank" class="px-4 py-2 bg-purple-500 text-white rounded hover:bg-purple-600">Open PDF</a>
  </div>

  <!-- JavaScript for functionality -->
  <script>
    // ---------- Flashcards ----------
    const flashcards = ["Cell structure", "Mitosis", "Photosynthesis", "DNA replication"];
    let currentFlashcard = 0;
    const flashcardContent = document.getElementById("flashcard-content");
    const nextFlashcardBtn = document.getElementById("nextFlashcard");

    nextFlashcardBtn.addEventListener("click", () => {
      flashcardContent.textContent = flashcards[currentFlashcard];
      currentFlashcard = (currentFlashcard + 1) % flashcards.length;
    });

    // ---------- Quiz ----------
    const quizQuestions = [
      { question: "What is the powerhouse of the cell?", answer: "Mitochondria" },
      { question: "What carries genetic info?", answer: "DNA" },
      { question: "Process of cell division?", answer: "Mitosis" }
    ];
    let currentQuiz = 0;
    let score = localStorage.getItem("quizScore") || 0;
    document.getElementById("quiz-score").textContent = score;

    const quizQuestionEl = document.getElementById("quiz-question");
    const nextQuizBtn = document.getElementById("nextQuiz");

    nextQuizBtn.addEventListener("click", () => {
      const q = quizQuestions[currentQuiz];
      quizQuestionEl.textContent = q.question + " (Answer: " + q.answer + ")";
      score++;
      localStorage.setItem("quizScore", score);
      document.getElementById("quiz-score").textContent = score;
      currentQuiz = (currentQuiz + 1) % quizQuestions.length;
    });

    // ---------- Progress Tracker / Streak ----------
    let streak = localStorage.getItem("streak") || 0;
    document.getElementById("streak").textContent = streak;

    // Increment streak daily (simplified example)
    const lastVisit = localStorage.getItem("lastVisit");
    const today = new Date().toDateString();
    if (lastVisit !== today) {
      streak++;
      localStorage.setItem("streak", streak);
      localStorage.setItem("lastVisit", today);
      document.getElementById("streak").textContent = streak;
    }
  </script>

</body>
</html>
